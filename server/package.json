    "cross-env": "^7.0.3",
    "express": "^5.1.0",
    "googleapis": "^152.0.0",
    "graphql": "^16.11.0",
    "graphql-subscriptions": "^2.0.0",
    "graphql-tag": "^2.12.6",
    "graphql-ws": "^6.0.5",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.16.3",
