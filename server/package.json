{
  "name": "jat-server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "tsc": "rm -rf build && tsc",
    "dev": "dotenvx run -- cross-env NODE_ENV=development ts-node-dev src/index.ts",
    "build:server": "npm run compile && npm run tsc",
    "build:client": "rm -rf dist && cd ../client/ && npm install && npm run build && cp -r dist ../server/",
    "build:full": "npm run build:server && npm run build:client",
    "start": "dotenvx run -- cross-env NODE_ENV=production node build/src/index.js",
    "lint": "eslint .",
    "prettier": "npx prettier --write .",
    "compile": "graphql-codegen"
  },
  "author": "Garrett Chen",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.16.0",
    "@graphql-codegen/cli": "^5.0.7",
